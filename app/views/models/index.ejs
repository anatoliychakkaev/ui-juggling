<div class="page-header">
    <h1>Index of <%- modelName %></h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- linkTo('<i class="icon-plus icon-white"></i> New ' + modelName, pathTo.newModel(modelName), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (models.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <% Object.keys(properties).forEach(function (p) { %>
                        <th> <%- p %> </th>
                        <% }) %>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% models.forEach(function (model) { %>
                        <tr>
                            <td><strong><%- link_to(modelName + ' #' + model.id, pathTo.model(modelName, model)) %></strong></td>

                            <% Object.keys(properties).forEach(function (p) { %>
                            <td> <%- stringify(model[p]) %> </td>
                            <% }) %>
                            <td>
                                <%- link_to('<i class="icon-edit"></i> Edit', pathTo.editModel(modelName, model), {class: 'btn btn-mini'}) %>
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.model(modelName, model), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No models were found.</strong> 
            </p>
        <% } %>
    </div>
</div>
